# BIO - Biomass/Biogas Plant Simulation Engine
# Copy to .env and adjust values

# === Project ===
API_V1_STR=/api/v1
PROJECT_NAME=BIO Physics Engine
VERSION=0.1.0

# === Server ===
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# === Simulation ===
MAX_CONCURRENT_SIMULATIONS=5
DEFAULT_REALTIME_FACTOR=1.0
MAX_REALTIME_FACTOR=100.0

# === WebSocket ===
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_RATE_LIMIT=10

# === Database (PostgreSQL + TimescaleDB) ===
DATABASE_URL=postgresql+asyncpg://bio:bio@localhost:45432/bio_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# === CORS Origins ===
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8050,http://localhost:8000
